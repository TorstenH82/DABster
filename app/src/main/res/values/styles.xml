<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style
        name="customDialog"
        parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style
        name="customSpinner"
        parent="@android:style/Widget.Holo.Spinner">
        <item name="android:textColor">#ff787878</item>
    </style>
    <style
        name="customSpinnerDropDownStyle"
        parent="@android:style/Widget.ListView.DropDown">
        <item name="android:divider">#ffff0000</item>
        <item name="android:dividerHeight">5dp</item>
    </style>
    <style
        name="spinnerDropDownItemStyle"
        parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
    </style>
   
    <style
        name="HorizontalDividerMargin"
        parent="">
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:minHeight">1px</item>
    </style>
    <style
        name="StationName"
        parent="@android:style/TextAppearance.DeviceDefault.Large">
    </style>
    <style
        name="DLS"
        parent="@android:style/TextAppearance.DeviceDefault.Medium">
    </style>
    <style
        name="StationListTitle"
        parent="@android:style/TextAppearance.DeviceDefault.Medium">
    </style>
    <style
        name="StationListAdditionalInfo"
        parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#ff787878</item>
    </style>
    <style
        name="SettingsHeadline"
        parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style
        name="SettingsText"
        parent="@android:style/TextAppearance.DeviceDefault.Medium">
    </style>
    <style
        name="ChannelDetails"
        parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
   <style
        name="PresetText"
        parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style
        name="OrientationMainlyHorizontal"
        parent="">
        <item name="android:orientation">horizontal</item>
    </style>
    <style
        name="Transparent"
        parent="">
        <item name="android:colorForeground">#fff</item>
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <!-- Base application theme. -->
    <style
        name="Base.AppTheme"
        parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorStatusbar</item>
    </style>
    <style
        name="AppTheme"
        parent="Base.AppTheme" />
    <style
        name="Translucent"
        parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style
        name="Theme.Transparent"
        parent="Base.AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- <item name="android:progressTint">@color/colorLightGray</item> -->
        <!-- <item name="android:progressBackgroundTint">@android:color/transparent</item> -->
        <!-- added to avoid flickering -->
        <item name="android:windowAnimationStyle">@null</item>
        
    </style>
</resources>
