<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/left_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:baselineAligned="true"
        android:layout_weight="5">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:baselineAligned="false">
        <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/signal_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/signal_0"
                    android:contentDescription="@null" />
            <Button
                    android:gravity="center_vertical"
                    android:id="@+id/bt_record"
                    android:background="@drawable/record_start_selector"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <TextView
                    android:textAppearance="@style/StationName"
                    android:id="@+id/service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
        </LinearLayout>
        <LinearLayout
                android:gravity="center"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <Button
                    android:gravity="center_vertical"
                    android:id="@id/bt_record"
                    android:background="@drawable/record_start_selector"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            <ImageView
                    android:layout_gravity="center"
                    android:id="@id/signal_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/signal_0"
                    android:contentDescription="@null" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp">
        <TextView
                android:textAppearance="@style/DLS"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:id="@+id/dls_scroll"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever" />
    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/left_background_box"
            android:background="@drawable/backgroud_text_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <ViewFlipper
                android:id="@+id/viewflipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.thf.dabplayer.activity.MotImage
                    android:layout_gravity="center"
                    android:id="@+id/mot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/radio"
                    android:contentDescription="@null" />
            <ScrollView
                    android:layout_gravity="center"
                    android:id="@+id/channeldetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TableLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:stretchColumns="*"
                        android:shrinkColumns="*">
                    <TableRow
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/ChannelDetailsLayoutMargin"
                            android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:gravity="right"
                                android:text="@string/StationName"
                                android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:id="@+id/details_station_name"
                                android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:gravity="right"
                                android:text="@string/PTY"
                                android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:id="@+id/details_pty"
                                android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:gravity="right"
                                android:text="@string/Ensemble"
                                android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:id="@+id/details_ensemble"
                                android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:gravity="right"
                                android:text="@string/ServiceID"
                                android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:id="@+id/details_service_id"
                                android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:gravity="right"
                                android:text="@string/Frequency"
                                android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:id="@+id/details_frequency"
                                android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:gravity="right"
                                android:text="@string/Bitrate"
                                android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:id="@+id/details_bitrate"
                                android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:gravity="right"
                                android:text="@string/AudioCodec"
                                android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:id="@+id/details_audiocodec"
                                android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:gravity="right"
                                android:text="@string/AudioSampleRate"
                                android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:id="@+id/details_audiobitrate"
                                android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:gravity="right"
                                android:text="@string/SignalQuality"
                                android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:textSize="15sp"
                                android:textColor="#00ffff"
                                android:id="@+id/details_signalquality"
                                android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                            android:gravity="center_vertical"
                            android:layout_marginBottom="0dp">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:gravity="right"
                                android:text="@string/ServiceFollowing"
                                android:layout_marginEnd="8dp" />
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:id="@+id/details_servicefollowing"
                                android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="8dp">
                        <TextView
                                android:textAppearance="@style/ChannelDetails"
                                android:ellipsize="marquee"
                                android:gravity="center_horizontal"
                                android:id="@+id/details_servicelog"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fadingEdge="horizontal"
                                android:layout_span="2"
                                android:scrollHorizontally="true"
                                android:singleLine="true"
                                android:marqueeRepeatLimit="marquee_forever" />
                    </TableRow>
                </TableLayout>
            </ScrollView>
        </ViewFlipper>
    </LinearLayout>
    <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textSize="16sp"
                android:textColor="#ff808080"
                android:id="@+id/service_freq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:textSize="16sp"
                android:textColor="#ffffffff"
                android:id="@+id/service_pty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Spinner
                android:textSize="14sp"
                android:textColor="#ffffffff"
                android:layout_gravity="right"
                android:id="@+id/pty_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                style="@style/customSpinner" />
    </LinearLayout>
    <View style="@style/HorizontalDividerMargin" />
    <LinearLayout
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingTop="-8dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            <Button
                    android:layout_gravity="center_vertical"
                    android:id="@+id/bt_prev"
                    android:background="@drawable/previous_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/buttonBarButtonStyle" />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            <Button
                    android:layout_gravity="center_vertical"
                    android:id="@+id/bt_favor"
                    android:background="@drawable/favor_list_selector_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/buttonBarButtonStyle" />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            <Button
                    android:layout_gravity="center_vertical"
                    android:id="@+id/bt_next"
                    android:background="@drawable/next_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/buttonBarButtonStyle" />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
        </LinearLayout>
        <View
                android:background="#ff8c8c8c"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            <Button
                    android:layout_gravity="center_vertical"
                    android:id="@+id/bt_scan"
                    android:background="@drawable/scan_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/buttonBarButtonStyle" />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            <Button
                    android:layout_gravity="center_vertical"
                    android:id="@+id/bt_settings2"
                    android:background="@drawable/settings2_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    style="?android:attr/buttonBarButtonStyle" />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            <Button
                    android:layout_gravity="center_vertical"
                    android:id="@+id/bt_pty"
                    android:background="@drawable/pty_selector"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    style="?android:attr/buttonBarButtonStyle" />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
