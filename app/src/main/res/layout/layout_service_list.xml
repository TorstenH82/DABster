<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#ff000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@android:color/transparent" android:padding="20sp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:textColor="#ffff7300" android:layout_gravity="center_horizontal" android:id="@+id/listview_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Service List"/>
        <ImageView android:paddingTop="10sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/splash_line"/>
    </LinearLayout>
    <ListView android:id="@android:id/list" android:paddingTop="20sp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="60dp" android:layout_marginBottom="50dp" android:transcriptMode="alwaysScroll"/>
</RelativeLayout>
