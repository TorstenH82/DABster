<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/playerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="1dp"
    android:baselineAligned="true"
    android:layout_weight="1"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/reLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radio_bg"
    >
        

        <TextView
            android:textAppearance="@style/StationName"
            android:id="@+id/service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Station Name" />


        <Button
            android:layout_gravity="center_vertical"
            android:id="@+id/bt_prev"
            android:background="@drawable/previous_selector"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            style="?android:attr/buttonBarButtonStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/recycler"
            app:layout_constraintBottom_toBottomOf="@id/recycler"
            android:layout_marginStart="16dp"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:id="@+id/recycler"
            android:layout_gravity="center_horizontal"
            app:layout_constraintStart_toEndOf="@id/bt_prev"
            app:layout_constraintEnd_toStartOf="@id/bt_next"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dls_scroll"
            android:layout_marginTop="16dp"
        />

        <Button
            android:layout_gravity="center_vertical"
            android:id="@+id/bt_next"
            android:background="@drawable/next_selector"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/recycler"
            app:layout_constraintBottom_toBottomOf="@id/recycler"
            android:layout_marginEnd="16dp"
            style="?android:attr/buttonBarButtonStyle"
        />


        <TextView
            android:textAppearance="@style/DLS"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:id="@+id/dls_scroll"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="DLS"
            android:marqueeRepeatLimit="marquee_forever"
            app:layout_constraintBottom_toTopOf="@id/memorybar"
            android:layout_marginBottom="40dp"
            
        />


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:id="@+id/memorybar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            
            app:layout_constraintBottom_toTopOf="@id/bottombar"
        >
            <include layout="@layout/layout_memory" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:id="@+id/bottombar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:baselineAligned="true"
            android:gravity="bottom"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
        >
            <include layout="@layout/bottombar" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70">

            
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/left_background_box"
        android:background="@drawable/backgroud_text_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="1">
        <ViewFlipper
            android:id="@+id/viewflipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ScrollView
                android:layout_gravity="center"
                android:id="@+id/channeldetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:stretchColumns="*"
                    android:shrinkColumns="*">
                    <TableRow
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/ChannelDetailsLayoutMargin"
                        android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:gravity="right"
                            android:text="@string/StationName"
                            android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:id="@+id/details_station_name"
                            android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:gravity="right"
                            android:text="@string/PTY"
                            android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:id="@+id/details_pty"
                            android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:gravity="right"
                            android:text="@string/Ensemble"
                            android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:id="@+id/details_ensemble"
                            android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:gravity="right"
                            android:text="@string/ServiceID"
                            android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:id="@+id/details_service_id"
                            android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:gravity="right"
                            android:text="@string/Frequency"
                            android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:id="@+id/details_frequency"
                            android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:gravity="right"
                            android:text="@string/Bitrate"
                            android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:id="@+id/details_bitrate"
                            android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:gravity="right"
                            android:text="@string/AudioCodec"
                            android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:id="@+id/details_audiocodec"
                            android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:gravity="right"
                            android:text="@string/AudioSampleRate"
                            android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:id="@+id/details_audiobitrate"
                            android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:gravity="right"
                            android:text="@string/SignalQuality"
                            android:layout_marginEnd="@dimen/ChannelDetailsLayoutMargin" />
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:textSize="15sp"
                            android:textColor="#00ffff"
                            android:id="@+id/details_signalquality"
                            android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/ChannelDetailsLayoutMargin">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:gravity="right"
                            android:text="@string/ServiceFollowing" />
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:id="@+id/details_servicefollowing"
                            android:layout_marginStart="@dimen/ChannelDetailsLayoutMargin" />
                    </TableRow>
                    <TableRow
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:textAppearance="@style/ChannelDetails"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:id="@+id/details_servicelog"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fadingEdge="horizontal"
                            android:layout_span="2"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever" />
                    </TableRow>
                </TableLayout>
            </ScrollView>
        </ViewFlipper>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textColor="#ff808080"
            android:id="@+id/service_freq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:textColor="#ffffffff"
            android:id="@+id/service_pty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:textSize="14sp"
            android:textColor="#ffffffff"
            android:layout_gravity="right"
            android:id="@+id/pty_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            style="@style/customSpinner" />
    </LinearLayout>


    <Button
        android:layout_gravity="center_vertical"
        android:id="@+id/bt_pty"
        android:background="@drawable/pty_selector"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        style="?android:attr/buttonBarButtonStyle" />
    <Button
        android:layout_gravity="center_vertical"
        android:id="@+id/bt_favor"
        android:background="@drawable/favor_list_selector_off"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        style="?android:attr/buttonBarButtonStyle" />
</LinearLayout>
